{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "rootDir": "../",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "_v/*": [
        "src/views/*"
      ],
      "_c/*": [
        "src/components/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.vue",
    "snippets/**/*.ts",

    "theme/**/*.ts",
    "theme/**/*.tsx",
    "theme/**/*.vue",

    "typings/**/*.d.ts",
    "../typings/**/*.d.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
